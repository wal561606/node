<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Agregar una nueva receta</h4>
            <form action="/admin/recetas/agregarReceta" method="post" enctype="multipart/form-data"> <!-- AGREGAR ESTO DENTRO DE LO ANTERIOR PARA CARGAR IMAGENES enctype="multipart/form-data"-->
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>

                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="DescripciÃ³n" name="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Ingredientes" name="ingredientes"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Instrucciones" name="instrucciones"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" class="form-control" id="imagen" name="imagen" /> </label>
                    
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <h5>{{message}}</h5>  
            {{/if}}  
        </div>
    </div>
</div>